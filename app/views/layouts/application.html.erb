<!DOCTYPE html>
<html>
  <head>
    <title>Cheapgram</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <p>Cheapgram</p>
    </header>

    <br></br>

    <div class="main-container">
      <% if logged_in? %>
        <%= link_to "プロフィール", user_path(current_user.id) %>
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
      <% else %>
        <%= link_to "新規に登録する", new_user_path %>
        <%= link_to "ログインする", new_session_path %>
      <% end %>

      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>

      <%= yield %>
    </div>
    
    <footer>
      <p>Copyright &copy; 2023 DIC.</p>
    </footer>
  </body>
</html>
